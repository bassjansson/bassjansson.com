# Prevents Apache from serving .htaccess files
<FilesMatch "^\.htaccess">
    Order allow,deny
    Deny from all
</FilesMatch>

# Redirects to HTTPS
RewriteEngine on
RewriteCond %{HTTPS} != on
RewriteRule (.*) https://bassjansson.com/$1 [R]

# Enables HSTS
Header set Strict-Transport-Security "max-age=31536000" env=HTTPS
