# Prevents Apache from serving .htaccess files
<FilesMatch "^\.htaccess">
    Order allow,deny
    Deny from all
</FilesMatch>

# Redirects to HTTPS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteCond %{SERVER_PORT} 80
RewriteRule (.*) https://%{SERVER_NAME}/$1 [R,L]

# Enables HSTS
Header set Strict-Transport-Security "max-age=31536000" env=HTTPS
